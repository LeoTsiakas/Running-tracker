<div class="flex flex-col justify-start items-center gap-2">
    <h1>Sign up</h1>

    <%= form_with model: @user do |form| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        
        <div class="flex flex-col justify-start items-center gap-2">
            <div class="field">
                <%= form.label :email %><br>
                <%= form.email_field :email, class: "border-solid border-1 border-gray-300 rounded-md", placeholder: "johndoe@gmail.com" %>
            </div>
            
            <div class="field">
                <%= form.label :password %><br>
                <%= form.password_field :password, class: "border-solid border-1 border-gray-300 rounded-md", placeholder: "password" %>
            </div>
            
            <div class="field">
                <%= form.label :password_confirmation %><br>
                <%= form.password_field :password_confirmation, class: "border-solid border-1 border-gray-300 rounded-md", placeholder: "Confirm password" %>
            </div>
            
            <div class="bg-blue-400 rounded-md p-2 text-center text-white">
                <%= form.submit "Sign up"%>
            </div>
        </div>
    <% end %>
</div>
